<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LanchoMac</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LanchoMac.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playpen+Sans:wght@100;200;300;400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>
   <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="sm-none navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                 <img src="~/images/logo_lanche2-sfd.png" />
                    LanchesMac
                </a>
                @await Component.InvokeAsync("CarrinhoCompreResumo")
                @await Component.InvokeAsync("CategoriaMenu")
                @await Html.PartialAsync("_LoginPartial")
                @if (User.IsInRole("Admin"))
                {
                                <a class="nav-link text-light" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
                }
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                  
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>                  
                     <a class="nav-link text-light" asp-area="" asp-controller="Contato" asp-action="Index">Contato</a>
                      <form class=".d-sm-none navbar-form navbar-right" asp-controller="Lanche" asp-action="Search" method="get">
                      <div class="form-group">
                        <input type="text" class="form-control" placeholder="Procurar produto" name="searchString" value="@ViewData["searchString"]">
                      </div>
                    </form>
                 
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <partial name="_Footer"/>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
